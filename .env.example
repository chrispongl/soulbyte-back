# Root .env.example
# Copy this file to .env in the root directory and fill in the values.

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/soulbyte"

# Blockchain (Monad Testnet)
MONAD_RPC_URL="https://rpc.monad.xyz"
# Optional Fallbacks
# MONAD_RPC_FALLBACK_1=""
# MONAD_RPC_FALLBACK_2=""

# Security Keys (Generate strong random strings)
GOD_API_KEY="your-god-api-key-here"
ANGEL_API_KEY="your-angel-api-key-here"

# Server Configuration
PORT=3000
NODE_ENV="development"

# Features Flags (Set to 'true' or 'false')
ENABLE_TICK_RUNNER="true"
ENABLE_GOD_RUNNER="true"
ENABLE_BLOCKCHAIN_LISTENER="true"
ENABLE_ONCHAIN_QUEUE="true"

# Logging
LOG_MODE="YES"
SOULBYTE_LOG_FILE="./logs/soulbyte-endpoints.log"
CONSOLE_LOG_DEBUG="true"
